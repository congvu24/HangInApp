                            <Border.Background>
                                <ImageBrush ImageSource="/Resources/Images/hinh-anh-heo-cute-va-de-thuong_030601765.jpg"></ImageBrush>
                            </Border.Background>
                        </Border>
                        <StackPanel Orientation="Vertical" Panel.ZIndex="10" Canvas.Bottom="50">
                            <TextBox Name="name" Style="{StaticResource infoTextBox}"  FontSize="29" FontWeight="Bold">Duy</TextBox>
                            <TextBox Name="age" Style="{StaticResource infoTextBox}">age: 20</TextBox>
                            <TextBox Name ="hobby" Style="{StaticResource infoTextBox}">Like: you :3</TextBox>
                        </StackPanel>
                    </Canvas>
                </Grid>
                <Grid Height="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions> 

                    <Button Grid.Column="0" Style="{StaticResource navButton1}" >
                            <Image Source="/Resources/icon/reload.png" Style="{StaticResource hover}"/>
                    </Button>

                    <Button Grid.Column="1" Style="{StaticResource navButton1}"  >
                        <Image Source="/Resources/icon/heart.png" Style="{StaticResource hover}"/>
                    </Button>
                    <Button Grid.Column="2" Style="{StaticResource navButton1}" >
                        <Image Source="/Resources/icon/reject.png" Style="{StaticResource hover}"/>
                    </Button>

                </Grid>
            </StackPanel>
        </Grid>
