                            VerticalContentAlignment="Center">

                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/Images/ImageSlot.png" ></ImageBrush>
                        </Button.Background>

                    </Button>

                    <Button Grid.Row="1" Width="102" Height="144"
                            BorderThickness="0" Content="+" 
                            FontSize="70" Foreground="LightGray" 
                            HorizontalContentAlignment="Center" 
                            VerticalContentAlignment="Center">

                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/Images/ImageSlot.png" ></ImageBrush>
                        </Button.Background>

                    </Button>
                    <Button Grid.Row="2" Width="102" Height="144"
                            BorderThickness="0" Content="+" 
