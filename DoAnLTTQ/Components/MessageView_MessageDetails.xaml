<UserControl x:Class="DoAnLTTQ.Components.MessageView_MessageDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:DoAnLTTQ.Components"
             mc:Ignorable="d" 
              xmlns:component="clr-namespace:DoAnLTTQ.Components"
             d:DesignHeight="720" d:DesignWidth="640" >

    <UserControl.Resources>
        <Style x:Key="myProfilePicture" TargetType="Image">
            <Setter Property="Margin" Value="15, 0, 10 ,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Stretch" Value="Fill"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TextToSendMessage">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <Style x:Key="SendButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="myMessageName">
            <Setter Property="FontSize" Value="34"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="emojiPicture" TargetType="Image">
            <Setter Property="Margin" Value="15, 10 ,10 ,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Stretch" Value="Fill"/>
        </Style>

    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="86" />
            <RowDefinition Height="7*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>

        <!--Avatar va ten partnerday-->
        <Grid Grid.Row="0" Background="Transparent" >
            <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">

                <Border Grid.Column="0" CornerRadius="20">
                    <Image Source="{Binding avatar.buffer}"  Style="{StaticResource myProfilePicture}">
                        <Image.Clip>
                            <EllipseGeometry Center="35,35" RadiusX="28" RadiusY="28" />
                        </Image.Clip>
                    </Image>
                </Border>

                <TextBlock Text="{Binding name}" Style="{StaticResource myMessageName}" x:Name="txtname"/>
            </WrapPanel>
        </Grid>

        <!--Tin nhan nam day ne-->
        <Border Grid.Row="1" Background="Transparent" BorderThickness="0, 1, 1, 1" BorderBrush="DarkGray">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" x:Name="messagePanel" >

                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2" Background="Transparent" >
            <Grid Margin="0 8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!--Icon nam day ne-->
                <materialDesign:PackIcon Kind="StickerEmoji"  Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30" Foreground="#FFD94E4E" Margin="4,0" />

                <!--Nhap tin nhan vao day ne-->
                <Border Grid.Column="1" Padding="2 0" Background="White" CornerRadius="20" BorderThickness="1" BorderBrush="#FF6A6060">
                    <TextBox x:Name="TextToSend" Style="{DynamicResource TextToSendMessage}" KeyDown="TextToSend_KeyDown" Grid.ColumnSpan="2" Margin="15 2"/>
                </Border>

                <!--Nut gui tin nhan day ne-->
                <materialDesign:PackIcon 
                        x:Name="SendButton"
                        Kind="Send" Margin="5 0 10 0" Grid.Column="2"
                   Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" Width="26" Height="25"/>
                <Button Click="SendButton_Click" Grid.Column="2" BorderThickness="0" Background="Transparent"/>

            </Grid>

        </Grid>
    </Grid>
</UserControl>