                <materialDesign:Chip IconBackground="{x:Null}" MinHeight="40" MinWidth="60">
                    <TextBlock Text="{Binding name}" x:Name="txtName" FontSize="16" FontWeight="Bold"/>
                    <materialDesign:Chip.Icon>
                        <Image Source="{Binding avatar.buffer}"/>

