<UserControl x:Class="DoAnLTTQ.Components.MessageView_MessageDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAnLTTQ.Components"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="640">
    <UserControl.Resources>
        <Style x:Key="myProfilePicture" TargetType="Image">
            <Setter Property="Margin" Value="15, 0, 10 ,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Stretch" Value="Fill"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="myMessageName">
            <Setter Property="FontSize" Value="34"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Border" x:Key="PartnerMessageBorder">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="Margin" Value="30,10,30,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style TargetType="Border" x:Key="MyMessageBorder">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="Margin" Value="30,10,30,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="MessageContent">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style TargetType="TextBox" x:Key="TextToSendMessage">
            
        </Style>

        <Style x:Key="MyFocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="-2" StrokeThickness="1" Stroke="Red" StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SendButton" TargetType="Button">
            <Setter Property="Margin" Value="4, 2, 6, 2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Content" Value="Send"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Avatar va ten partnerday--> 
        <Grid Grid.Row="0" Background="White" >
            <!--<ItemsControl x:Name="messageNameTitle" ItemsSource="{Binding}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel HorizontalAlignment="Left">

                            <Border Grid.Column="0" CornerRadius="20">
                                <Image Source="/Resources/Images/IMG_9715.png"  Style="{StaticResource myProfilePicture}"> 
                                    <Image.Clip>
                                        <EllipseGeometry Center="25,25" RadiusX="20" RadiusY="20" />
                                    </Image.Clip>
                                </Image>
                            </Border>

                            <Label>

                            </Label>
                        </WrapPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>-->
            <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">

                <Border Grid.Column="0" CornerRadius="20">
                    <Image Source="/Resources/Images/IMG_9715.png"  Style="{StaticResource myProfilePicture}">
                        <Image.Clip>
                            <EllipseGeometry Center="35,35" RadiusX="28" RadiusY="28" />
                        </Image.Clip>
                    </Image>
                </Border>

                <TextBlock Text="Công vũ" Style="{StaticResource myMessageName}"/>
            </WrapPanel>
        </Grid>
        
         <!--Tin nhan nam day ne--> 
        <Border Grid.Row="1" Background="White" BorderThickness="0, 1, 1, 1" BorderBrush="DarkGray">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" >
                    <Border x:Name="PartnerMessage" Style="{StaticResource PartnerMessageBorder}">
                        <TextBlock x:Name="PartnerMessageContent" Style="{StaticResource MessageContent}" Text="Baby Shark dududu">
                          
                        </TextBlock>
                    </Border>

                    <Border x:Name="MyMessage" Style="{StaticResource MyMessageBorder}">
                        <TextBlock x:Name="MyMessageContent" Style="{StaticResource MessageContent}" Text="aaaaaaaaaaaaaaaadudu" />
                    </Border>
                   
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" CornerRadius="25" Margin="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <WrapPanel Grid.Column="0">
                    
                </WrapPanel>

                <TextBox Grid.Column="1" x:Name="TextToSend" BorderThickness="0" VerticalAlignment="Center" Padding="2"/>

                <Border Grid.Column="2">
                    <Button x:Name="SendButton" Style="{StaticResource SendButton}" >
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>

                            </Style>
                        </Button.Resources>

                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#ff7854" Offset="0.0" />
                                <GradientStop Color="#fd267d" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Border>
                
            </Grid>
        </Border>
    </Grid>
</UserControl>
