<UserControl x:Class="DoAnLTTQ.Components.MessageView_MessageDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAnLTTQ.Components"
             mc:Ignorable="d" 
              xmlns:component="clr-namespace:DoAnLTTQ.Components"
             d:DesignHeight="720" d:DesignWidth="640" >

    <UserControl.Resources>
        <Style x:Key="myProfilePicture" TargetType="Image">
            <Setter Property="Margin" Value="15, 0, 10 ,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Stretch" Value="Fill"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TextToSendMessage">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Comic sans ms"/>
        </Style>

        <Style x:Key="SendButton" TargetType="Button">
            <Setter Property="Margin" Value="4, 4, 2, 4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Content" Value="Send"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="myMessageName">
            <Setter Property="FontSize" Value="34"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="emojiPicture" TargetType="Image">
            <Setter Property="Margin" Value="15, 10 ,10 ,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Stretch" Value="Fill"/>
        </Style>

    </UserControl.Resources>

    <Grid Background="#FFF9F7F3">
        <Grid.RowDefinitions>
            <RowDefinition Height="86" />
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Avatar va ten partnerday-->
        <Grid Grid.Row="0" Background="White" >
            <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">

                <Border Grid.Column="0" CornerRadius="20">
                    <Image Source="{Binding avatar.buffer}"  Style="{StaticResource myProfilePicture}">
                        <Image.Clip>
                            <EllipseGeometry Center="35,35" RadiusX="28" RadiusY="28" />
                        </Image.Clip>
                    </Image>
                </Border>

                <TextBlock Text="{Binding name}" Style="{StaticResource myMessageName}"/>
            </WrapPanel>
        </Grid>

        <!--Tin nhan nam day ne-->
        <Border Grid.Row="1" Background="#FFF9F7F3" BorderThickness="0, 1, 1, 1" BorderBrush="DarkGray">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" x:Name="messagePanel" >

                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="2" BorderBrush="#FF6A6060" BorderThickness="1" CornerRadius="25" Margin="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="76*"/>
                    <ColumnDefinition Width="343*"/>
                    <ColumnDefinition Width="113*"/>
                    <ColumnDefinition Width="76*"/>
                </Grid.ColumnDefinitions>

                <!--Icon nam day ne-->
                <WrapPanel Grid.Column="0">
                    <Image Source="/Resources/icon/emoji tin nhan.png"  Style="{StaticResource emojiPicture}">

                    </Image>
                </WrapPanel>

                <!--Nhap tin nhan vao day ne-->
                <TextBox Grid.Column="1" x:Name="TextToSend" Style="{DynamicResource TextToSendMessage}" KeyDown="TextToSend_KeyDown" Grid.ColumnSpan="2" Margin="0,10"/>

                <!--Nut gui tin nhan day ne-->
                <Border Grid.Column="3">
                    <Button x:Name="SendButton" Style="{StaticResource SendButton}" Click="SendButton_Click" >
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>

                            </Style>
                        </Button.Resources>

                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#ff7854" Offset="0.0" />
                                <GradientStop Color="#fd267d" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Border>

            </Grid>
        </Border>
    </Grid>
</UserControl>
