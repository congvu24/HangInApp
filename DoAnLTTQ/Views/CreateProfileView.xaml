                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Grid Margin="0,0,40,30">
                    <TextBox x:Name="nameInput" Style="{StaticResource placeHolder}" Tag="--Your name--" TextWrapping="Wrap" Width="390" FontSize="16" FontFamily="Tahoma" CaretBrush="#FFB5E2FA" HorizontalAlignment="Left" Margin="70,0,0,0">
                        <TextBox.SelectionBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFF7854" Offset="0"/>
                                <GradientStop Color="#FFFD267D" Offset="1"/>
                            </LinearGradientBrush>
