                    </Grid.RenderTransform>
                    <TextBox x:Name="hobbyInput" Style="{StaticResource placeHolder}" Tag="--Your hobby--" Height="45" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" FontSize="16" FontFamily="Tahoma" CaretBrush="#FFB5E2FA" HorizontalAlignment="Left" Margin="70,0,0,0">
