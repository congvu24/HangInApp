                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <TextBox x:Name="ageInput" Style="{StaticResource placeHolder}" Tag="--Age--" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" FontSize="16" FontFamily="Tahoma" SelectionBrush="{x:Null}" CaretBrush="#FFB5E2FA" HorizontalAlignment="Left" Margin="70,0,0,0" Height="45"/>
                    <TextBlock  HorizontalAlignment="Left" Height="35" TextWrapping="Wrap" Text="Age:" VerticalAlignment="Top" Width="70" Margin="0,5,0,0"/>
                    <TextBlock Style="{StaticResource ErrorAnounce}" Text="askjdaskd" x:Name="errorAgeInput"/>
                </Grid>
            </Grid>
            <Grid Margin="0,150,0,75">
                <Grid x:Name="grid2" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <ComboBox IsEditable="True" IsReadOnly="True" Text="---Select--"
                        x:Name="sexSelect" FontFamily="Tahoma" FontSize="16" Foreground="#707070"
                        Height="45" HorizontalAlignment="Left" Width="181" Margin="70,0,0,25">
                        <ComboBoxItem Content="Male" Foreground="Black"/>
                        <ComboBoxItem Content="Female"  Foreground="Black"/>
                        <ComboBoxItem Content="I don't want to tell"  Foreground="Black"/>
